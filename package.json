{
    "author": "Christoph Guttandin",
    "bugs": {
        "url": "https://github.com/chrisguttandin/metadata-detector-streams/issues"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "dependencies": {
        "synchsafe": "^9.0.6",
        "tslib": "^2.6.3"
    },
    "description": "A tool to locate and strip metadata from files.",
    "devDependencies": {
        "@babel/cli": "^7.24.8",
        "@babel/core": "^7.24.9",
        "@babel/preset-env": "^7.24.8",
        "@babel/register": "^7.24.6",
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-angular": "^19.3.0",
        "chai": "^4.3.10",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.57.0",
        "eslint-config-holy-grail": "^59.0.14",
        "grunt": "^1.6.1",
        "grunt-cli": "^1.4.3",
        "grunt-sh": "^0.2.1",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.7",
        "load-grunt-config": "^4.0.1",
        "mocha": "^10.6.0",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.6",
        "sinon": "^17.0.2",
        "sinon-chai": "^3.7.0",
        "tsconfig-holy-grail": "^15.0.1",
        "tslint": "^6.1.3",
        "tslint-config-holy-grail": "^56.0.1",
        "typescript": "^5.4.5"
    },
    "engines": {
        "node": ">=18.2.0"
    },
    "files": [
        "build/es2019/",
        "build/node/",
        "src/"
    ],
    "homepage": "https://github.com/chrisguttandin/metadata-detector-streams",
    "license": "MIT",
    "main": "build/node/module.js",
    "name": "metadata-detector-streams",
    "repository": {
        "type": "git",
        "url": "https://github.com/chrisguttandin/metadata-detector-streams.git"
    },
    "scripts": {
        "build": "rimraf build/* && tsc --project src/tsconfig.json && babel ./build/es2019 --config-file ./config/babel/build.json --out-dir ./build/node",
        "lint": "npm run lint:config && npm run lint:src && npm run lint:test",
        "lint:config": "eslint --config config/eslint/config.json --ext .js --report-unused-disable-directives config/",
        "lint:src": "tslint --config config/tslint/src.json --project src/tsconfig.json src/*.ts src/**/*.ts",
        "lint:test": "eslint --config config/eslint/test.json --ext .js --report-unused-disable-directives test/",
        "prepare": "husky install",
        "prepublishOnly": "npm run build",
        "test": "grunt lint && grunt test"
    },
    "types": "build/es2019/module.d.ts",
    "version": "6.0.4"
}
